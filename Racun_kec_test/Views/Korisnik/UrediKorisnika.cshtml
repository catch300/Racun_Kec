@{
    ViewBag.Title = "UrediPoduzece";
}
@using Racun_kec_test.Models
@model Korisnik

<body class="padTop53 ">

    <!--PAGE CONTENT -->
    <div id="content">
        <div class="inner">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <br>
                        <div class="panel-heading">
                            <h4> Izmjene osobnih podataka</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="panel panel-default">

                                        <div class="panel-body">
                                            <br>
                                            <div class="table-responsive">
                                                @using (Html.BeginForm())
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <div class="form-group">


                                                        <form method="post" action="">

                                                            <p>
                                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                                @Html.HiddenFor(model => model.id_korisnik)

                                                            </p>
                                                            <p></p>
                                                            @Html.LabelFor(model => model.ime_prezime, new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.ime_prezime, new { htmlAttributes = new { @class = "form-control", placeholder = "Ime i prezime" } })
                                                            @Html.ValidationMessageFor(model => model.ime_prezime, "", new { @class = "text-danger" })
                                                            <p></p>
                                                            <p></p>
                                                            @Html.LabelFor(model => model.email, new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail adresa" } })
                                                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                                            <p></p>
                                                            <p></p>
                                                            @Html.LabelFor(model => model.lozinka, new { @class = "control-label" })
                                                            @Html.PasswordFor(model => model.lozinka, new { @class = "form-control", placeholder = "Lozinka" })
                                                            @Html.ValidationMessageFor(model => model.lozinka, "", new { @class = "text-danger" })
                                                            <p></p>
                                                            <p></p>
                                                            @*@Html.LabelFor(model => model.licenca, new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.licenca, new { htmlAttributes = new { @class = "form-control", placeholder = "Licenca" } })
                                                            @Html.ValidationMessageFor(model => model.licenca, "", new { @class = "text-danger" })*@
                                                            @Html.HiddenFor(model => model.licenca)
                                                            <p></p>
                                                            <p></p>
                                                            @Html.LabelFor(model => model.aktivan, new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.aktivan, new { htmlAttributes = new { @class = "form-control", placeholder = "Aktivan" } })
                                                            @Html.ValidationMessageFor(model => model.aktivan, "", new { @class = "text-danger" })
                                                            <p></p>
                                                            <p></p>
                                                            @Html.LabelFor(x => Model.Poduzece, htmlAttributes: new { @class = "control-label" })
                                                            <br />

                                                            @Html.DropDownListFor(model => model.id_poduzece, ViewData["Poduzece"] as IEnumerable<SelectListItem>, "- Odaberite poduzeće -", new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(x => x.id_poduzece, "", new { @class = "text-danger" })
                                                            <p></p>
                                                            <p></p>
                                                            <button class="btn btn-danger">Uredi</button>
                                                        </form>
                                                        @Html.ActionLink("Odustani", "PoduzeceIndex", new { @class = "btn btn-primary" })
                                                    </div>

                                                }
                                            </div>
                                           
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                </div>
                            </div><!--END ROW -->
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
   
       
</body>
<!-- END BODY -->