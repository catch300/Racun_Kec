        <td width="60%">
            <p>
                <a href="@Url.Action("Create", "Stavke_racuna", new { id = Model.id_racun })"  id_racun="@Model.id_racun" class="btn primary newDetailInvoice">Kreiraj novu stavku </a>
            </p>
            <div id="msgErrorNewInvoiceDetails"></div>

            <div id="invoiceDetailsList">
                @{Html.RenderAction("IndexByInvoice", "Stavke_racuna", new { id = Model.id_racun })
                  ;}
            </div>
        </td>
    </tr>
